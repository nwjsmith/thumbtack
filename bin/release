#!/usr/bin/env zsh
set -euo pipefail

function current_version() {
  find . -maxdepth 1 -name 'thumbtack-*.gem' -exec gem spec {} version \; |
    grep 'version: ' |
    sed 's/version: //'
}

function latest_version() {
  gem search "^thumbtack$" | grep "thumbtack" | sed -E "s/thumbtack \((.+)\)/\1/"
}

function main() {
  if [ "$(current_version)" != "$(latest_version)" ]; then
  fi
}

main
